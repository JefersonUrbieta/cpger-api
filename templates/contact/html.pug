doctype html
html
    head
        style
            include style.css
    body

        h2 Cliente
        p <strong>Nome:</strong> #{nome}
        p <strong>Telefone:</strong> #{telefone}
        p <strong>Email:</strong> #{email}
        p <strong>Mensagem:</strong> #{descricao}

        h2 Localização
        p <strong>Latitude:</strong> #{latitude}
        p <strong>Logitude:</strong> #{longitude}

        h2 Dados do Calculo
        p <strong>Vazão:</strong> #{dados.vazao} #{dados.unidVazaoLbl}
        p <strong>Pressão</strong> #{dados.pressao} #{dados.unidPressaoLbl}

        h2 Resultado do Calculo
        p <strong>Potência:</strong> #{dados.potencia} kW
        p <strong>Valor Por Dia: R$</strong> #{dados.valorDia}
        p <strong>Valor Por Mês: R$</strong> #{dados.valorMes}
        p <strong>Valor Por Ano: R$</strong> #{dados.valorAno}

        h2 Configurações
        p <strong>Tarifa de Energia:</strong> #{configuracao.tarifa} R$/kWh
        p <strong>Rendimento do Gerador:</strong> #{configuracao.rendimentoGerador} %
        p <strong>Peso Especifico da água:</strong> #{configuracao.pesoAgua} Kg/m³
        p <strong>Aceleração da gravidade:</strong> #{configuracao.aceleracaoGravidade} m/s²
        p <strong>Horas por dia:</strong> #{configuracao.horasPorDia}
